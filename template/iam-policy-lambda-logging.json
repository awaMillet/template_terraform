{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateLogGroup",
      "Effect": "Allow",
      "Resource": "arn:aws:logs:ap-northeast-1:${aws_account_id}:*",
      "Action": [
        "logs:CreateLogGroup"
      ]
    },
    {
      "Sid": "CreateLogStream",
      "Effect": "Allow",
      "Resource": "arn:aws:logs:ap-northeast-1:${aws_account_id}:log-group:/aws/lambda/*:*",
      "Action": [
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ]
    }
  ]
}